<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.xuxin.databasedemo.DatabaseCRUDActivity"
tools:showIn="@layout/activity_database_crud">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DbCURD_exinfo" />
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/DbCURD_info" />
    <TableLayout
    android:id="@+id/dbcrud_insert_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <TableLayout
    android:id="@+id/dbcrud_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    android:layout_centerHorizontal="true"/>
</LinearLayout>
